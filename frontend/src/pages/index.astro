---
import Layout from '../layouts/Layout.astro';
import PostCard from '../components/PostCard.astro';

// Fetch posts from backend
interface Post {
  title: string;
  content: string;
  tag: string;
  author: string;
}

let posts: Post[] = [];
try {
  const response = await fetch('http://127.0.0.1:8000/posts');
  if (response.ok) {
	posts = await response.json();
  }
} catch (error) {
  console.error("Error fetching posts:", error);
}
---

<Layout title="Aether - Inicio">
	<div class="grid grid-cols-1 lg:grid-cols-12 gap-8">
		<!-- Main Feed -->
		<div class="lg:col-span-8 space-y-6">
			<div class="bg-white rounded-2xl p-6 border border-slate-100 shadow-sm mb-8">
				<h1 class="text-2xl font-bold text-slate-900 mb-2">Bienvenido a Aether</h1>
				<p class="text-slate-500">Un espacio para compartir ideas, reflexiones y conocimiento sin ruido.</p>
			</div>

			<div class="space-y-6">
				{posts.length > 0 ? (
					posts.map((post) => (
						<PostCard 
							title={post.title} 
							content={post.content} 
							tag={post.tag} 
							author={post.author} 
						/>
					))
				) : (
					<div class="text-center py-16 bg-white rounded-2xl border border-dashed border-slate-200">
						<div class="w-16 h-16 bg-slate-50 rounded-full flex items-center justify-center mx-auto mb-4">
							<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-slate-400"><path d="M12 20h9"></path><path d="M16.5 3.5a2.121 2.121 0 0 1 3 3L7 19l-4 1 1-4L16.5 3.5z"></path></svg>
						</div>
						<h3 class="text-lg font-medium text-slate-900 mb-1">No hay publicaciones aún</h3>
						<p class="text-slate-500 mb-6">Sé el primero en compartir algo interesante.</p>
						<a href="/crear" class="inline-flex items-center justify-center px-6 py-2.5 border border-transparent text-sm font-medium rounded-full text-white bg-indigo-600 hover:bg-indigo-700 transition-colors shadow-lg shadow-indigo-200">
							Escribir publicación
						</a>
					</div>
				)}
			</div>
		</div>

		<!-- Sidebar -->
		<div class="hidden lg:block lg:col-span-4 space-y-6">
			<div class="sticky top-24 space-y-6">
				<!-- Trending Topics -->
				<div class="bg-white rounded-2xl border border-slate-100 shadow-sm p-6">
					<h3 class="font-bold text-slate-900 mb-4 text-lg">Tendencias</h3>
					<div class="space-y-4">
						<a href="#" class="block group">
							<span class="text-xs text-slate-400 block mb-0.5">Tecnología · Tendencia</span>
							<span class="font-medium text-slate-800 group-hover:text-indigo-600 transition-colors">#InteligenciaArtificial</span>
						</a>
						<a href="#" class="block group">
							<span class="text-xs text-slate-400 block mb-0.5">Arte · Popular</span>
							<span class="font-medium text-slate-800 group-hover:text-indigo-600 transition-colors">#MinimalismoDigital</span>
						</a>
						<a href="#" class="block group">
							<span class="text-xs text-slate-400 block mb-0.5">Comunidad</span>
							<span class="font-medium text-slate-800 group-hover:text-indigo-600 transition-colors">#AetherCommunity</span>
						</a>
					</div>
				</div>

				<!-- Suggested Users -->
				<div class="bg-white rounded-2xl border border-slate-100 shadow-sm p-6">
					<h3 class="font-bold text-slate-900 mb-4 text-lg">A quién seguir</h3>
					<div class="space-y-4">
						<div class="flex items-center justify-between">
							<div class="flex items-center gap-3">
								<div class="w-10 h-10 bg-teal-500 rounded-full flex items-center justify-center text-white font-bold text-sm">M</div>
								<div>
									<p class="font-medium text-slate-900 text-sm">María G.</p>
									<p class="text-xs text-slate-500">@mariadesign</p>
								</div>
							</div>
							<button class="text-xs font-medium bg-slate-900 text-white px-3 py-1.5 rounded-full hover:bg-slate-800 transition-colors">Seguir</button>
						</div>
						<div class="flex items-center justify-between">
							<div class="flex items-center gap-3">
								<div class="w-10 h-10 bg-orange-500 rounded-full flex items-center justify-center text-white font-bold text-sm">J</div>
								<div>
									<p class="font-medium text-slate-900 text-sm">Juan Dev</p>
									<p class="text-xs text-slate-500">@juancode</p>
								</div>
							</div>
							<button class="text-xs font-medium bg-slate-900 text-white px-3 py-1.5 rounded-full hover:bg-slate-800 transition-colors">Seguir</button>
						</div>
					</div>
				</div>
				
				<footer class="text-xs text-slate-400 px-2">
					<p>© 2025 Aether Inc. Privacidad · Términos · Cookies</p>
				</footer>
			</div>
		</div>
	</div>
</Layout>
